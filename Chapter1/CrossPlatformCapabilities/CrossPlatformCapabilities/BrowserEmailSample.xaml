<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Padding="0,20,0,0"
             x:Class="CrossPlatformCapabilities.BrowserEmailSample">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Button Text="Open Web page" 
                    x:Name="BrowserButton" 
                    Clicked="BrowserButton_Clicked"
                    />
            <Button Text="Send email" 
                    x:Name="EmailButton" 
                    Clicked="EmailButton_Clicked" 
                    Margin="0,15,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>